<% action_url = type == :new_user ? users_url : session_url %>
<% submit_text = type == :new_user ? "Sign Up" : "Sign In" %>

<form action="<%= action_url %>" method="post">
  <%= auth_token %>
  <label>Username
    <input id="username"
           type="text"
           name="user[username]"
           value=<%= user.username %>>
  </label>
  <br>
  <label>Password
    <input id="password" type="password" name="user[password]">
  </label>
  <br>
  <input type="submit" value="<%= submit_text %>">
</form>
