<!DOCTYPE html>
<html>
<head>
  <title>JogLog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <link href='https://fonts.googleapis.com/css?family=Racing+Sans+One' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>

  <% if current_user %>
    <script>
      window.CURRENT_USERID = <%= current_user.id.to_i %>;
      window.CURRENT_USERNAME = "<%= current_user.username %>";
    </script>
  <% end %>

</head>
<body>

<%= yield %>
<% if flash[:errors] %>
<ul>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>

</body>
</html>
